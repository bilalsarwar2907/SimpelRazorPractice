@page
@model SimpelRazorPractice.Pages.StudentPages.DeleteStudentModel

<!--
    MAIN PAGE CONTAINER
    - Provides consistent spacing and centers content
-->
<div class="container mt-4">

    <!-- PAGE TITLE -->
    <h1 class="mb-4">Delete Student</h1>

    @if (Model.Student != null)
    {
        <!--
            WARNING CARD
            - alert-warning gives a yellow warning box
            - shadow-sm adds a soft shadow
            - p-4 adds padding
        -->
        <div class="alert alert-warning shadow-sm p-4">

            <!-- Strong warning text -->
            <h4 class="mb-3">Are you sure you want to delete this student?</h4>

            <!-- Student details displayed clearly -->
            <p class="mb-1"><strong>ID:</strong> @Model.Student.StudentId</p>
            <p class="mb-1"><strong>Name:</strong> @Model.Student.StudentName</p>
            <p class="mb-3"><strong>Age:</strong> @Model.Student.StudentAge</p>

            <!--
                FORM SECTION
                - Posts back to OnPost()
                - Contains hidden StudentId
            -->
            <form method="post" class="mt-3">

                <!-- Hidden field to send StudentId back on POST -->
                <input type="hidden" asp-for="StudentId" />

                <!-- Confirm delete button (full width on mobile) -->
                <button type="submit" class="btn btn-danger">
                    Confirm Delete
                </button>

                <!-- Cancel button -->
                <a asp-page="/Index" class="btn btn-secondary ms-2">
                    Cancel
                </a>
            </form>
        </div>
    }
    else
    {
        <!-- Message if no student was found -->
        <div class="alert alert-info mt-4">
            No student selected for deletion.
        </div>
    }

</div> <!-- END CONTAINER -->